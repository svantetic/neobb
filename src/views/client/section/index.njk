{% extends "../../base.njk" %}

{% block content %}
<div class="container mx-auto">
    <div class="card my-12 shadow-md">
        <div class="px-4 py-2">
            <p class="text-lg">
                {{ section.name }}
            </p>
            <p class="text-sm">
                {{ section.description }}
            </p>
        </div>
        <div class="px-4 py-4">
            {% if threads | length %}
                {% include "./thread.njk" %}
            {% else %}
                <p>No threads yet :<</p>
            {% endif %}
        <a class="inline-block px-4 py-4 bg-blue-500 text-white mt-8 w-auto hover:bg-blue-800 rounded" href="/thread/new?section={{section.id}}">New thread</a>
        </div>
    </div>
</div>
{% endblock %}