{
    "compilerOptions": {
        "outDir": "./public/js/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "baseUrl": ".",
        "target": "es6",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "paths": {
            "@": ["src/*"]
        }
    },
    "include": [
        "src/frontend/**/*.ts",
        "src/fontend/**/*.tsx",
        "src/**/*.vue",
    ],
  }